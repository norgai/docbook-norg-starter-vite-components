{
  "name": "component-ai-chat-n8n-workflows",
  "version": "1.0.0",
  "description": "N8N workflow templates for Component AI Chat integration",
  "main": "index.js",
  "scripts": {
    "validate": "node scripts/validate-workflows.js",
    "deploy": "node scripts/deploy-workflows.js",
    "backup": "node scripts/backup-workflows.js",
    "test": "node scripts/test-workflows.js"
  },
  "keywords": [
    "n8n",
    "workflows", 
    "claude",
    "ai",
    "component",
    "react",
    "typescript"
  ],
  "author": "Component AI Chat Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/component-ai-chat"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "joi": "^17.11.0",
    "chalk": "^5.3.0"
  },
  "workflowVersions": {
    "component-chat-main": "1.0.0",
    "error-handling": "1.0.0", 
    "code-validation": "1.0.0"
  },
  "n8nCompatibility": {
    "minimum": "1.0.0",
    "recommended": "1.15.0"
  },
  "requirements": {
    "apiKeys": [
      "ANTHROPIC_API_KEY"
    ],
    "systemCommands": [
      "claude-code",
      "npm",
      "npx"
    ],
    "nodeTypes": [
      "n8n-nodes-base.webhook",
      "n8n-nodes-base.anthropic",
